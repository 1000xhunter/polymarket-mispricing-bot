# Core endpoints
GAMMA_API_URL=https://gamma-api.polymarket.com/markets
CLOB_HOST=https://clob.polymarket.com
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# Runtime
REQUEST_TIMEOUT_SECONDS=15
POLL_INTERVAL_SECONDS=60
EVAL_INTERVAL_SECONDS=2
MAX_MARKETS_PER_SCAN=2000
PAGE_SIZE=200
LOG_LEVEL=INFO

# Universe filter
CRYPTO_ONLY=true
CRYPTO_KEYWORDS=btc,bitcoin,eth,ethereum,sol,solana,crypto,doge,xrp

# Optional startup seed from REST midpoint
USE_MIDPOINT_SNAPSHOT=true

# Alerting thresholds
ALERT_COOLDOWN_SECONDS=30
ENABLE_DIAGNOSTICS=true
DIAGNOSTICS_TOP_N=20
PINCH_SCORE_THRESHOLD=0.8
NARROW_BAND_PROB_THRESHOLD=0.35
NARROW_BAND_WIDTH_PCT_THRESHOLD=0.005
MONOTONICITY_TOLERANCE=0.01

# Exit guidance
CORRECTION_DROP_PCT=0.30
CORRECTION_PINCH_BELOW=0.4

# Time-aware volatility context
ENABLE_VOLATILITY_CONTEXT=true
VOLATILITY_SOURCE=binance
VOLATILITY_UPDATE_SECONDS=60
VOLATILITY_ROLLING_WINDOW_POINTS=120

# Optional Discord alerts
ENABLE_DISCORD_ALERTS=false
DISCORD_WEBHOOK_URL=

# Execution (set ENABLE_TRADING=true for live orders)
ENABLE_TRADING=false
ENABLE_PAPER_EXECUTION=true
CHAIN_ID=137
POLYMARKET_PRIVATE_KEY=
POLYMARKET_FUNDER_ADDRESS=
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
TRADE_USD_PER_LEG=10
MIN_ORDER_SIZE=1
PRICE_BUFFER=0.01
MAX_OPEN_SPREADS=30
POSITIONS_FILE=spread_positions.json

# WebSocket resilience
WS_RECV_TIMEOUT_SECONDS=20
WS_HEARTBEAT_SECONDS=15
WS_RECONNECT_SECONDS=3
CLEAR_CONSOLE_SECONDS=60

# Console dashboard / UX
DASHBOARD_INTERVAL_SECONDS=10
ENABLE_WINDOWS_TITLE=true
