# Scanner
GAMMA_API_URL=https://gamma-api.polymarket.com/markets
POLL_INTERVAL_SECONDS=20
MISPRICING_THRESHOLD=0.03
EXIT_THRESHOLD=0.01
REQUEST_TIMEOUT_SECONDS=15
MAX_MARKETS_PER_SCAN=1000
PAGE_SIZE=200
LOG_LEVEL=INFO
ENABLE_PRICING_DIAGNOSTICS=true
DIAGNOSTICS_TOP_N=10
ENABLE_PNL_MODE=true
CLEAR_CONSOLE_SECONDS=60
CRYPTO_ONLY=true
CRYPTO_KEYWORDS=btc,bitcoin,eth,ethereum,sol,solana,crypto,doge,xrp

# Alerts (optional)
DISCORD_WEBHOOK_URL=

# Trading toggle
ENABLE_TRADING=false
POSITIONS_FILE=positions.json

# Polymarket CLOB / wallet settings (required when ENABLE_TRADING=true)
CLOB_HOST=https://clob.polymarket.com
CHAIN_ID=137
POLYMARKET_PRIVATE_KEY=
POLYMARKET_FUNDER_ADDRESS=
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Risk and sizing
MAX_ACTIVE_POSITIONS=20
MAX_TOTAL_EXPOSURE_USD=500
MAX_MARKET_EXPOSURE_USD=100
MAX_LOSS_USD=100
TAKE_PROFIT_USD=15
STOP_LOSS_USD=15
TRADE_USD_PER_LEG=10
MIN_ORDER_SIZE=1
PRICE_BUFFER=0.01

# Dynamic sizing (optional)
ENABLE_DYNAMIC_SIZING=false
DYNAMIC_SIZE_EXPOSURE_PCT=10
DYNAMIC_SIZE_MIN_USD_PER_LEG=5
DYNAMIC_SIZE_MAX_USD_PER_LEG=50

# Volatility-aware sizing (optional)
ENABLE_VOLATILITY_SIZING=false
VOLATILITY_SOURCE=coingecko
VOLATILITY_LOOKBACK_DAYS=14
TARGET_DAILY_VOLATILITY=0.03
MIN_VOLATILITY_MULTIPLIER=0.25
MAX_VOLATILITY_MULTIPLIER=1.50
VOLATILITY_UPDATE_SECONDS=60
VOLATILITY_ROLLING_WINDOW_POINTS=120
